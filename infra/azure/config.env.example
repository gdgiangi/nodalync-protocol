# Azure Bootstrap Node Configuration
# Copy to config.env and fill in your values
# DO NOT commit config.env to version control

# Azure settings
AZURE_SUBSCRIPTION=""          # Optional, uses default if not set
RESOURCE_GROUP="nodalync-bootstrap"
LOCATION="eastus"              # eastus, westeurope, southeastasia, etc.

# Resource names (must be globally unique, lowercase alphanumeric)
ACR_NAME="nodalyncacr"         # Azure Container Registry (3-50 chars)
STORAGE_ACCOUNT="nodalyncdata" # Storage account (3-24 chars)

# Container settings
CONTAINER_NAME="nodalync-bootstrap-1"
DNS_LABEL="nodalync-bootstrap" # => <label>.<location>.azurecontainer.io

# Node password (generate with: openssl rand -base64 32)
NODALYNC_PASSWORD=""

# Optional: Hedera settings
# HEDERA_ACCOUNT_ID=""
# HEDERA_PRIVATE_KEY=""
# HEDERA_CONTRACT_ID="0.0.7729011"
