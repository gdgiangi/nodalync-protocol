{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Nodalync Desktop",
  "version": "0.1.0",
  "identifier": "com.nodalync.desktop",
  "build": {
    "frontendDist": "dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Nodalync Studio",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null,
      "devCsp": null,
      "freezePrototype": false,
      "dangerousDisableAssetCspModification": false
    },
    "trayIcon": {
      "iconPath": "icons/tray.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "Nodalync Node"
    }
  },
  "bundle": {
    "active": false,
    "category": "DeveloperTool",
    "copyright": "Â© 2026 Nodalync Protocol",
    "longDescription": "Desktop application for managing Nodalync protocol nodes, monitoring network activity, and tracking creator earnings.",
    "shortDescription": "Nodalync Protocol Desktop Client",
    "targets": "all",
    "resources": [],
    "externalBin": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "",
      "exceptionDomain": ""
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}